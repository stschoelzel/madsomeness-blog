---
import { getCollection, render } from 'astro:content'
import { defaultLocale, moreLocales } from '@/config'
import Layout from '@/layouts/Layout.astro'

export async function getStaticPaths() {
  type PathItem = {
    params: { imprint: string }
    props: { lang: string }
  }

  const paths: PathItem[] = []

  // Default locale
  paths.push({
    params: { imprint: 'imprint/' },
    props: { lang: defaultLocale },
  })

  // More locales
  moreLocales.forEach((lang: string) => {
    paths.push({
      params: { imprint: `${lang}/imprint/` },
      props: { lang },
    })
  })

  return paths
}

const { lang } = Astro.props

// Get imprint page content with different language
const allImprintEntries = await getCollection('imprint')
const imprintEntry = allImprintEntries.find(entry => entry.data.lang === lang)
  ?? allImprintEntries.find(entry => entry.data.lang === '')
const { Content } = imprintEntry ? await render(imprintEntry) : { Content: null }
---

<Layout>
  <!-- Decorative Line -->
  <div class="uno-decorative-line" />
  <!-- Imprint Page Content -->
  <div class="heti">
    {Content && <Content />}
  </div>
</Layout>
